                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:text="800" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:id="@+id/c1"
                android:layout_toRightOf="@+id/o1"
                android:layout_height="match_parent">

                <ImageView
                    android:scaleType="fitXY"
                    android:padding="1.0dip"
                    android:src="@mipmap/fg"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </RelativeLayout>



            <RelativeLayout
                android:layout_width="0dp"
                android:layout_toRightOf="@+id/c1"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"

                android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:id="@+id/b1"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="10.0sp"
                    android:textColor="#ff8f8f8f"
                    android:paddingTop="2.0dip"
                    android:layout_height="fill_parent"
                    android:text="券后"
                    />
                <TextView
                    android:textSize="12.0sp"
                    android:textStyle="bold"
                    android:textColor="#fffb0000"
                    android:id="@+id/lingkuan"
                    android:paddingLeft="1dp"
                    android:layout_width="wrap_content"
                    android:maxLines="1"
                    android:layout_height="wrap_content"
                    android:text="9999" />



            </LinearLayout>

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_below="@+id/b1"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:background="@mipmap/bg_coupon_sc9"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true">
                    <TextView
                        android:textSize="12.0sp"
                        android:textColor="#ffffffff"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:id="@+id/sp_juan"
                        android:paddingLeft="5.0dip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="90" />
                    <TextView
                        android:textSize="12.0sp"
                        android:textColor="#ffffffff"
                        android:gravity="center"
                        android:paddingRight="5.0dip"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="元" />
                </LinearLayout>
            </LinearLayout>
            </RelativeLayout>


